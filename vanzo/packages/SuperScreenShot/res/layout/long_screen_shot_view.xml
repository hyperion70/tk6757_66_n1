<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <FrameLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView 
            android:id="@+id/upframe"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#B2000000"
            />
        <ImageView 
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:background="@drawable/border_focused"
            />  
        <ImageView 
            android:id="@+id/downframe"
            android:layout_marginBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#B2000000"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"   
        android:orientation="vertical" >
        
        <View 
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        
        <TextView
            android:id="@+id/long_shot_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
	    android:layout_marginRight="27px"
            android:background="@drawable/long_shot_save_button"
            android:gravity="center"/>
        
        <TextView
            android:id="@+id/next_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="27px"
	    android:layout_marginRight="27px"
            android:background="@drawable/next_button"
            android:gravity="center"/>

        <TextView
            android:id="@+id/long_shot_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_gravity="right"
	    android:layout_marginRight="27px"
            android:layout_marginTop="27px"
            android:layout_marginBottom="95px"
            android:background="@drawable/long_shot_exit_button"
            android:gravity="center"/>
        

    </LinearLayout>

</merge>
